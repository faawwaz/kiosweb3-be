# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/eceranstore?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Auth.js (run: npx auth secret)
AUTH_SECRET=your-auth-secret-min-32-characters
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_SECRET=your-webhook-secret

# Midtrans
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_MERCHANT_ID=your-merchant-id

# Hot Wallet Private Keys (KEEP SECURE!)
HOT_WALLET_PRIVATE_KEY_BSC=0x...
HOT_WALLET_PRIVATE_KEY_ETH=0x...
HOT_WALLET_PRIVATE_KEY_BASE=0x...

# Pricing
DEFAULT_MARKUP_PERCENT=8
USD_IDR_RATE=15800

# RPC URLs
RPC_URL_BSC=https://bsc-dataseed.binance.org
RPC_URL_ETH=https://eth.llamarpc.com
RPC_URL_BASE=https://mainnet.base.org

# App URL (for payment callbacks)
APP_URL=http://localhost:3000
